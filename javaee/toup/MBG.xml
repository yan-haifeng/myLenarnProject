<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<context id="DB2Tables" targetRuntime="MyBatis3">
		<!-- 生成表注释配置 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		
		<!-- 配置数据库连接 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/toup_db?serverTimezone=GMT%2B8"
			userId="toup" password="123">
		</jdbcConnection>
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- 指定javabean生成位置 -->
		<javaModelGenerator
			targetPackage="com.zime.toup.entity" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- 指定SQL映射文件生成位置 -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 指定DAO接口生成位置 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="com.zime.toup.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- 指定表的生成策略 -->
<!-- 		<table tableName="goods" domainObjectName="Goods"></table> -->
<!-- 		<table tableName="tb_order" domainObjectName="Order"></table> -->
<!-- 		<table tableName="user" domainObjectName="User"></table> -->
		<table tableName="orderview" domainObjectName="Orderview"></table>
	</context>
</generatorConfiguration>